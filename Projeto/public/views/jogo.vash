<!DOCTYPE html>
<html lang="pt-br">

<head>
   <title>Pé de meia - Ped1/2</title>
   <!-- Meta -->
   <meta charset="utf-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="description" content="Portal - Bootstrap 5 Admin Dashboard Template For Developers">
   <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
   <link rel="shortcut icon" href="icone.jpg">
   <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.1.9/sweetalert2.all.min.js"
		integrity="sha512-IZ95TbsPTDl3eT5GwqTJH/14xZ2feLEGJRbII6bRKtE/HC6x3N4cHye7yyikadgAsuiddCY2+6gMntpVHL1gHw=="
		crossorigin="anonymous" referrerpolicy="no-referrer"></script>
   <!-- FontAwesome JS-->
   <script defer src="assets/plugins/fontawesome/js/all.min.js"></script>
   <!-- App CSS -->
   <link id="theme-style" rel="stylesheet" href="assets/css/portal.css">

   <script src="../scripts/jogo.js"></script>
     <script src="../scripts/question.js"></script>


</head>

<body>
   <div class="row g-0 app-auth-wrapper">
      <div class="col-12 auth-main-col text-center p-5"
         style="background-image: url(assets/images/background/fundo.jpg);
                background-size: cover;
                background-repeat: no-repeat
                position: absolute;
                background-position: center;
                bottom: 0;
                top: 0;
                right: 0;
                left: 0;
                padding: 3em;
                overflow: auto;
                ">
         <div class="d-flex flex-column align-content-end">
            <div class="app-auth-body mx-auto">
               <div class="auth-form-container text-start mx-auto">
                  <form class="auth-form auth-signup-form" method="post" action="/Game">

                    @{
                      if(model.quest != undefined){

                        let list = undefined;

                        if(model.quest.OrderQuest == undefined)
                        {
                          list = [1,2,3,4]

                          for (let i = list.length; i;) {
                              randomNumber = Math.random() * i-- | 0;
                              tmp = list[randomNumber];
                              // troca o número aleatório pelo atual
                              list[randomNumber] = list[i];
                              // troca o atual pelo aleatório
                              list[i] = tmp;
                          }
                        }
                        else
                        {
                          list = [model.quest.OrderQuest]
                        }


                          <textarea class="mx-auto" name="pergunta" id="pergunta" cols="40" rows="3"
                             style="background-color: rgb(149, 145, 145);
                             margin: 0 auto;
                             text-align:left;"
                          readonly>@model.quest.Pergunta</textarea>


                        <div class="auth-form-container text-start mx-auto">

                        <input type="number" name="OrderQuest" value="@list[0]" hidden/>

                        <input id="Ajuda" type="number" name="Ajudar" value="1" hidden/>

                       @switch(list[0])
                       {
                         case 1:
                           <div class="text-center">

                             <button id="test"
                             type="submit"
                             class="btn theme-btn mx-auto CorretResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.RespostaCorreta">
                                     @model.quest.RespostaCorreta
                             </button>

                           </div>

                           <div class="text-center">
                              <button type="submit"
                              class="btn theme-btn mx-auto ErrorResponse"
                              style="background-color:  rgb(149, 145, 145);
                                     margin-bottom: 10px;
                                     width: 300px;"
                              name="Resposta" value="@model.quest.ItemA">
                                 @model.quest.ItemA
                              </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemB">
                                 @model.quest.ItemB
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemC">
                                 @model.quest.ItemC
                             </button>
                           </div>
                           break;

                         case 2:
                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemA">
                                 @model.quest.ItemA
                             </button>
                           </div>

                           <div class="text-center">
                              <button type="submit"
                              class="btn theme-btn mx-auto CorretResponse"
                              style="background-color:  rgb(149, 145, 145);
                                     margin-bottom: 10px;
                                     width: 300px;"
                              name="Resposta" value="@model.quest.RespostaCorreta">
                                 @model.quest.RespostaCorreta
                              </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemB">
                                 @model.quest.ItemB
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemC">
                                 @model.quest.ItemC
                             </button>
                           </div>
                           break;

                         case 3:
                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemA">
                                 @model.quest.ItemA
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemB">
                                 @model.quest.ItemB
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto CorretResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.RespostaCorreta">
                                 @model.quest.RespostaCorreta
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemC">
                                 @model.quest.ItemC
                             </button>
                           </div>
                           break;

                         case 4:
                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemA">
                                 @model.quest.ItemA
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemB">
                                 @model.quest.ItemB
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto ErrorResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.ItemC">
                                 @model.quest.ItemC
                             </button>
                           </div>

                           <div class="text-center">
                             <button type="submit"
                             class="btn theme-btn mx-auto CorretResponse"
                             style="background-color:  rgb(149, 145, 145);
                                    margin-bottom: 10px;
                                    width: 300px;"
                             name="Resposta" value="@model.quest.RespostaCorreta">
                                 @model.quest.RespostaCorreta
                             </button>
                           </div>
                           break;

                       }

                     </div>

                   }
                 }

                 <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                @if(model.quest.Ajudar && model.quest.Resposta == undefined)
                {
                 <div class="col-auto">
                    <a class="btn app-btn-secondary left" onclick="Ajudar()">
                      Ajuda
                    </a>
                  </div>
                }

                @if(model.quest.Resposta != undefined)
                {
                  <div class="col-auto">
                     <a class="btn app-btn-secondary center" href="/NextQuest">
                       Próxima Questão
                     </a>
                  </div>
                }

                 <div class="col-auto">
                     <button type="button" class="btn-sm app-btn-secondary" onClick="denunciar(@model.quest.QuestaoId)">
                            Denunciar
                          </button>
                  </div>
                </div>
                  </form>
               </div>

               <!--//auth-form-container-->
            </div>
            <!--//auth-body-->
            <footer class="app-auth-footer">
               <div class="container text-center py-3">
                  <!--/* This template is free as long as you keep the footer attribution link. If you'd like to use the template without the attribution link, you can buy the commercial license via our website: themes.3rdwavemedia.com Thank you for your support. :) */-->
                  <small class="copyright">
                     <i style="color: #fb866a;"></i>
                     <a class="app-link" href="http://themes.3rdwavemedia.com" target="_blank"></a>
                  </small>
               </div>
            </footer>
            <!--//app-auth-footer-->
         </div>
         <!--//flex-column-->
      </div>
      <!--//auth-main-col-->

      <!--//auth-background-col-->
   </div>
   <!--//row-->
</body>

@if(model.quest.Resposta != undefined){
  <script>ValidateQuests()</script>
}

</html>
