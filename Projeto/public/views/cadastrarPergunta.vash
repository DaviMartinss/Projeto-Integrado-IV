   <body class="app app-signup p-0">
      <div class="row g-0 app-auth-wrapper">
         <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
               <div class="app-auth-body mx-auto">
                  
                  <h2 class="auth-heading text-center mb-4">Adicionar Pergunta</h2>
                  <div class="auth-form-container text-start mx-auto">
                     <form class="auth-form auth-signup-form" method="post" action="/GeneratePergunta">
                        
                         <div class="mb-3">
                           <input id="addTopico" name="TopicoQuestao" type="text" class="form-control" placeholder="Informe o Tópico da Questão" required="required">
                        </div>

                        <div class="mb-3">
                           <input id="addPergunta" name="Pergunta" type="text" class="form-control" placeholder="Informe a pergunta" required="required">
                        </div>
                        
                        <div class="mb-3">
                         <select name="NivelDificuldade" style="width: 359px;"  required="required">
                              <option value="0">Informe a dificuldade</option>
                              <option value="1">Facil</option>
                              <option value="2">Intermediaria</option>
                              <option value="3">Dificil</option>
                           </select>
                        </div>
                        <div class="mb-3">
                           <input id="addRespostaTrue" name="RespostaCorreta" type="text" class="form-control addRespostaTrue" placeholder="Informe a resposta correta" required="required">
                        </div>
                        <div class="mb-3">
                           <input id="addRespostaFalse1" name="ItemA" type="text" class="form-control addRespostaFalse1" placeholder="Primeira Resposta Incorreta" required="required">
                        </div>

                        <div class="mb-3">
                           <input id="addRespostaFalse2" name="ItemB" type="text" class="form-control addRespostaFalse2" placeholder="Segunda Resposta Incorreta" required="required">
                        </div>
                        
                        <div class="mb-3">
                           <input id="addRespostaFalse3" name="ItemC" type="text" class="form-control addRespostaFalse3" placeholder="Terceira Resposta Incorreta" required="required">
                        </div>

                        <div class="text-center">
                           <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto" style="margin-bottom: 10px;">Cadastrar</button>
                        </div>

                        <div class="text-center">
                           <button type="reset" class="btn w-100 theme-btn mx-auto" style="background-color: red; margin-bottom: 10px;">Cancelar</button>
                        </div>
                       
                        

                     </form>
